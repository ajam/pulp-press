@import 'nib'

* 
	box-sizing border-box

html
	font-size 16px

body
	font-family: 'Oswald',sans-serif;
	font-size 62.5%
	margin 0

ul
	margin 0
	padding 0

rouge_vif = #e14a31

#page-wrapper
	margin 0 auto
	width 960px
#rouge-vif-logo
	width 40%
#options
	width 55%
#pages-container
	width 100%
	margin-top 25px
.header-item
	vertical-align top
	display inline-block
	height 90px
#rouge-vif-logo
	padding 10px
#options
	border-top-width 0
	border-left-width 0
	overflow auto
	padding-left 5px
	position relative
	width 22%
#endnotes
	width 38%
	button
		position relative
		top -2px
		left 5px
#endnotes-container
	height 70%
	overflow-x hidden
	overflow-y scroll
#rouge-vif-logo
	background-color rouge_vif
	font-size 4.7em
	font-style italic
	padding-left 20px
#rouge-vif-logo span
	font-family georgia
	font-size .4em
	color darken(rouge_vif, 40%)
.option
	font-size 1.5em
	margin-right 10px
	font-family 'Oswald', sans-serif
	font-weight 300
	vertical-align bottom
.option-group
	display block
.option-title
	font-size 1.4em
.option-group[data-type="download"]
	position absolute
	bottom 0
.option form
	display inline
#pages-container
	user-select none
.page-container
	margin 0 auto
	position relative
.page-info,.page-actions
	position absolute
	top 7px
	font-size 1.2em
.page-info
	padding-left 20px
	font-weight 300
	letter-spacing 1px
	border-top 1px solid #424242
	text-align right
.page-info-item
	margin-top 20px
.page-name, .page-info-hed
	font-weight normal
.page-container img
	pointer-events none
/* Footnotes */
.note-group
	margin-bottom 2px
	position relative
.note-group .destroy
	display inline-block
	padding-right 5px
	color #ccc
	vertical-align top
	width 10px
	height 25px
	user-select none
	font-size 2em
	line-height 1em

.note-group .destroy:hover
	color #000
	cursor pointer
.endnotes input
	display inline
	width 70px

/* Hotspots */
.hotspot
	position absolute
	background-color rgba(255, 204, 0, .5)
	min-width 10px
	min-height 20px
	display table
.hotspot:hover
	cursor move
.hotspot-number
	font-size 2em
	text-align center
	vertical-align middle
	display table-cell
.hotspot .destroy
	position absolute
	padding 5px
	background-color #fc0
	right 0
.hotspot .destroy:hover
	text-decoration underline
	cursor pointer !important

